{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./build/",
        "sourceMap": false,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "ES5",
            "ES2015",
            "DOM",
            "ScriptHost"
        ]
    }
}
